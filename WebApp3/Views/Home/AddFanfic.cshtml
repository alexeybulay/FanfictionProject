@model WebApp3.Models.Fanfic
@{
    ViewBag.Title = "Добавление фанфика";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">View</h1>

<h4 class="text-white">Fanfic</h4>
<hr />
<div class="row">
    <div class="col-md-12 text-white" >
        <form asp-action="CreateFanfic" asp-controller="Home">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameFanfic" class="control-label"></label>
                <input asp-for="NameFanfic" class="form-control" />
                <span asp-validation-for="NameFanfic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea cols="250" rows="5" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Опубликовать</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

